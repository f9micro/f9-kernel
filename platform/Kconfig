menu "Platform"
choice
	prompt "Device of STDIO"
	default STDIO_USE_DBGPORT
	help
	  Select input/output device for stdio

config STDIO_NODEV
	bool "Null device"

config STDIO_USE_DBGPORT
	bool "Use debug IO port"
	select DEBUG

endchoice

endmenu
